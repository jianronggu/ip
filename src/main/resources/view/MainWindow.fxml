<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="420.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="labussy.core.ui.MainWindow">

    <children>

        <ScrollPane fx:id="scrollPane" id="scrollPane"
                    fitToWidth="true" hbarPolicy="NEVER" vvalue="1.0"
                    AnchorPane.topAnchor="8.0"
                    AnchorPane.leftAnchor="8.0"
                    AnchorPane.rightAnchor="8.0"
                    AnchorPane.bottomAnchor="60.0">
            <content>
                <VBox fx:id="dialogContainer"
                      fillWidth="true"
                      spacing="10.0"
                      styleClass="chat"/>
            </content>
        </ScrollPane>

        <HBox spacing="10.0"
              AnchorPane.leftAnchor="8.0"
              AnchorPane.rightAnchor="8.0"
              AnchorPane.bottomAnchor="8.0"
              minHeight="48.0"
              styleClass="input-bar">
            <children>
                <TextField fx:id="userInput"
                           promptText="Type a command (e.g., todo read book, list, bye)â€¦"
                           onAction="#handleUserInput"
                           HBox.hgrow="ALWAYS"/>
                <Button fx:id="sendButton"
                        text="Send"
                        onAction="#handleUserInput"/>
            </children>
        </HBox>

    </children>
</AnchorPane>
