<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root type="javafx.scene.layout.HBox"
         alignment="TOP_LEFT"
         spacing="10.0"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <Label fx:id="dialog" wrapText="true" minHeight="-Infinity"/>
        <ImageView fx:id="displayPicture"
                   fitWidth="56.0" fitHeight="56.0"
                   preserveRatio="true" pickOnBounds="true"/>
    </children>

    <padding>
        <Insets top="8.0" right="6.0" bottom="8.0" left="6.0"/>
    </padding>
</fx:root>
